<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="3dp" android:color="#3F51B5" />
            <gradient android:angle="-90" android:startColor="#409DFF" android:endColor="#8FDFFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="3dip" android:color="#5e7974" />
            <solid android:color="#ACACAC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="3dp" android:color="#04D9FF" />
            <gradient android:angle="-90" android:startColor="#D9F6F0" android:endColor="#9EF3FB" />
        </shape>
    </item>
</selector>