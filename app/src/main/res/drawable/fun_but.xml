<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <!--<stroke android:width="3dp" android:color="#320300" />-->
            <gradient android:angle="-90" android:startColor="#2B0000" android:endColor="#511300"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="3dip" android:color="#5e7974" />
            <solid android:color="#ACACAC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <!--<stroke android:width="3dp" android:color="#FF1100" />-->
            <gradient android:angle="-90" android:startColor="#830101" android:endColor="#2B0A00" />
        </shape>
    </item>
</selector>